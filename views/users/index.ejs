<% include ../layout/header %>
  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
      <h1>Professores</h1>

      <table class="mdl-data-table">
        <thead>
          <tr>
            <th class="mdl-data-table__cell--non-numeric">Usuário</th>
            <th>Email</th>
            <th>Ação</th>
          </tr>
        </thead>
        <tbody>
          <% for ( var i = 0; i < data.lenght ; i++ ) {  %>      
            <tr>
              <td class="mdl-data-table__cell--non-numeric"><%= data.nome %></td>
              <td><%= data.email %></td>
              <td>
                <a href="/users/<%= data.id %>" class="mdl-button mdl-js-button mdl-button--raised mdl-color--primary mdl-color-text--white"><i class="material-icons">remove_red_eye</i></a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <p>
        <a href="/users/add" class="mdl-button mdl-js-button mdl-button--raised mdl-color--primary mdl-color-text--white"><i class="material-icons">person_add</i> Novo professor</a>
      </p>
    </div>
  </div>
<% include ../layout/footer %>
